<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
        <h2>Create New List</h2>
        <form method="POST" action="/listings" novalidate class="needs-validation">
            <div class="mb-2">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" 
                placeholder="enter title" 
                type="text" 
                class="form-control"
                required>
                <div class="valid-feedback">title looks good</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control" required ></textarea>
                <div class="invalid-feedback">please enter short description</div>
            </div >
            <div class="mb-2">
                <label for="image" class="form-label">Image Link</label>
                <input name="listing[image]" placeholder="enter image url/link" type="text" class="form-control" >
            </div>
            
            <div class="row">
                <div class="mb-1 col-md-4" >
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]"placeholder="enter price" class="form-control" required>
                    <div class="invalid-feedback">please enter a valid price</div>
                    
                </div>
    
                <div class="mb-1 col-md-8" >
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]"  placeholder="enter country" type="text" class="form-control" required>
                    <div class="invalid-feedback">please enter  country name</div>
                </div>
            </div>
            
            <div class="mb-2">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
                <div class="invalid-feedback">please enter location</div>
            </div>

            <button class="add-btn mt-2">Add List</button>
        </form>

    </div>
</div>
